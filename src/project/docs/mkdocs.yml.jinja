site_name: {{ repository_name.replace("-", " ").title() }}
site_description: |
  {{ project_description }}
repo_url: https://github.com/{{ author_username }}/{{ repository_name }}
repo_name: {{ author_username }}/{{ repository_name }}
extra_css:
  - stylesheets/extra.css
plugins:
  - search
  - mkdocstrings:
      handlers:
        python:
          paths: [..]
  - autorefs
theme:
  name: material
  custom_dir: overrides
  icon:
    repo: fontawesome/brands/git-alt
  palette:
    - scheme: slate
      toggle:
        icon: octicons/sun-24
        name: Switch to dark mode
      primary: teal
      accent: purple
    - scheme: default
      toggle:
        icon: octicons/moon-24
        name: Switch to light mode
      primary: teal
      accent: lime
  features:
    - search.suggest
    - search.highlight
    - navigation.expand
    - navigation.top
    - toc.follow
    - toc.integrate
markdown_extensions:
  - admonition # enables callouts
  - attr_list # add HTML to  markdown inlines/blocks
  - pymdownx.details # enables collapsible callouts
  - pymdownx.superfences # arbitrary nesting of code and content blocks
  - pymdownx.highlight # highlight code
  - pymdownx.inlinehilite # highlight code
  - pymdownx.tabbed: # tab panes (e.g. different macos/win snippet)
      alternate_style: true
  - pymdownx.tasklist:
      custom_checkbox: true
      clickable_checkbox: true
  - toc:
      permalink: "#"
nav:
  - Home: index.md
  - Examples: examples.md
  - API Reference: reference.md
extra:
  version:
    provider: mike
    default: latest
